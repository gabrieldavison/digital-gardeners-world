<%= form_with model: @website do |f| %>
<div>
  <%=f.label :title%><br>
  <%=f.text_field :title%>
  <% @website.errors.full_messages_for(:title).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= f.label :link %><br>
  <%= f.text_field :link %>
  <% @website.errors.full_messages_for(:link).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
  <% @website.errors.full_messages_for(:description).each do |message| %>
  <% puts message%>
  <div><%=message%></div>
  <% end %>
</div>

<div>
  <%= f.submit %>
</div>

<%end%>